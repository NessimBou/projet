<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app> 
	<display-name>twister</display-name> 
	
	<servlet>
		<servlet-name>CreateUser</servlet-name>
		<servlet-class>servlets.user.CreateUser</servlet-class>
	</servlet>				
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>servlets.user.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>servlets.user.Logout</servlet-class>
	</servlet>
	
	<!-- AddFriend/RemoveFriend/listFriends -->
	<servlet>
		<servlet-name>AddFriend</servlet-name>
		<servlet-class>servlets.friend.AddFriend</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoveFriend</servlet-name>
		<servlet-class>servlets.friend.RemoveFriend</servlet-class>
	</servlet>
		<servlet>
		<servlet-name>ListFriends</servlet-name>
		<servlet-class>servlets.friend.ListFriends</servlet-class>
	</servlet>
	
	<!-- AddMessage/DeleteMessage -->
	<servlet>
		<servlet-name>AddMessage</servlet-name>
		<servlet-class>servlets.message.AddMessage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteMessage</servlet-name>
		<servlet-class>servlets.message.DeleteMessage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListMessage</servlet-name>
		<servlet-class>servlets.message.ListMessage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddCommentaire</servlet-name>
		<servlet-class>servlets.message.AddCommentaire</servlet-class>
	</servlet>
	<!-- createUser/login/logout -->
	<servlet-mapping>
		<servlet-name>CreateUser</servlet-name>
		<url-pattern>/createUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<!-- AddFriend/RemoveFriend/ListFriends -->
	<servlet-mapping>
		<servlet-name>AddFriend</servlet-name>
		<url-pattern>/addFriend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveFriend</servlet-name>
		<url-pattern>/removeFriend</url-pattern>	
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>ListFriends</servlet-name>
		<url-pattern>/listFriend</url-pattern>	
	</servlet-mapping>
	
	<!-- AddMessage/DeleteMessage/ListMessage -->
	<servlet-mapping>
		<servlet-name>AddMessage</servlet-name>
		<url-pattern>/addMessage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteMessage</servlet-name>
		<url-pattern>/deleteMessage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListMessage</servlet-name>
		<url-pattern>/listMessage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddCommentaire</servlet-name>
		<url-pattern>/addCommentaire</url-pattern>
	</servlet-mapping>

</web-app>